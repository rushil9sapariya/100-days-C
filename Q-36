/*Q36: Write a program to find the HCF (GCD) of two numbers.*/

#include <stdio.h>
int main() {
    int a, b, i, hcf = 1;
    printf("Enter two numbers: ");
    scanf("%d %d", &a, &b);

    int min = (a < b) ? a : b;
    for (i = 1; i <= min; i++) {
        if (a % i == 0 && b % i == 0) {
            hcf = i;   // update HCF
        }
    }
    printf("HCF of %d and %d is: %d\n", a, b, hcf);
    return 0;
}
