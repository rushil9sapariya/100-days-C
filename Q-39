/*Q39: Write a program to find the product of odd digits of a number.*/

#include <stdio.h>
int main() {
    int num, digit, product = 1;
    int foundOdd = 0;  
    printf("Enter a number: ");
    scanf("%d", &num);

    if (num == 0) {
        printf("The product of odd digits = 0\n");
        return 0;
    }
    while (num > 0) {
        digit = num % 10;      
        if (digit % 2 != 0) {  
            product = product * digit;
            foundOdd = 1;
        }
        num = num / 10;       
    }
    if (foundOdd == 0) {
        printf("No odd digits found.\n");
    } else {
        printf("The product of odd digits = %d\n", product);
    }
    return 0;
}
