/*Q67: Insert an element in an array at a given position.*/


#include <stdio.h>

int main() 
{
    int size, i, pos, element;
    printf("Enter the size of the array: ");
    scanf("%d", &size);
    int arr[size + 1]; 
    printf("Enter the elements of the array:\n");
    for (i = 0; i < size; i++) 
    {
        scanf("%d", &arr[i]);
    }
    printf("Enter the position and the element to insert:\n");
    scanf("%d %d", &pos, &element);
    if (pos < 1 || pos > size + 1) 
    {
        printf("Invalid position.\n");
        return 1;
    }
    for (i = size; i >= pos; i--) 
    {
        arr[i] = arr[i - 1];
    }
    arr[pos - 1] = element;
    printf("The modified array is:\n");
    for (i = 0; i <= size; i++) 
    {
        printf("%d ", arr[i]);
    }
    printf("\n");
    return 0;
}


/*Q68: Delete an element from an array.*/
#include <stdio.h>
int main() 
{
    int size, i, pos;
    printf("Enter the size of the array: ");
    scanf("%d", &size);
    int arr[size];
    printf("Enter the elements of the array:\n");
    for (i = 0; i < size; i++) 
    {
        scanf("%d", &arr[i]);
    }
    printf("Enter the position to delete (1-indexed): ");
    scanf("%d", &pos);
    if (pos < 1 || pos > size) 
    {
        printf("Invalid position.\n");
        return 1;
    }
    for (i = pos - 1; i < size - 1; i++) 
    {
        arr[i] = arr[i + 1];
    }
    printf("The modified array is:\n");
    for (i = 0; i < size - 1; i++) 
    {
        printf("%d ", arr[i]);
    }
    printf("\n");
    return 0;
}
